@page "/student"

<div class="container mt-5">
    <h1 class="display-4 mb-4 fw-bold text-primary text-center">Student List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Serial No</th>
                <th>Full Name</th>
                <th>Age</th>
                <th>Marks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in students)
            {
                <tr>
                    <td>@student.SerialNo</td>
                    <td>@student.FullName</td>
                    <td>@student.Age</td>
                    <td>@student.Marks</td>
                </tr>
            }
        </tbody>
    </table>
</div>

